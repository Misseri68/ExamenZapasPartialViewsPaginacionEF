@model Zapas


<h3>Detalles de @Model.Nombre</h3>

<div class="card">
    <div class="card-header" style="background-color:lightblue">
        <h3>@Model.Nombre</h3>
    </div>
    <div class="card-body" id="containerFotos">
        PARTIAL VIEW
    </div>
    <div class="card-footer">
        <h6>Descripción</h6>
        <p>@Model.Descripcion</p>
        <h6>Precio:</h6>
        <p>Precio: @Model.Precio €</p>
    </div>
</div>


@section Scripts{
    <script>

        $(document).ready(function(){
           
            $("#containerFotos").load('/Zapas/_Fotos?id=' + @Model.Id);

        })
           
        $(document).on('click', '.btnpaginacion', function () {
            var posicion = $(this).data('pos');
            console.log("Nueva posición seleccionada: " + posicion);
            $("#containerFotos").load('/Zapas/_Fotos?id=' + @Model.Id + '&pos=' + posicion);
        });
    </script>
}
